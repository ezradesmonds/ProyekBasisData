<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.katering.controller.LoginController"
            prefWidth="400" prefHeight="500" stylesheets="@../../style/style.css"
            styleClass="login-background">

    <children>

        <!-- Card Container -->
        <AnchorPane fx:id="loginCard" layoutX="50" layoutY="70" prefWidth="300" prefHeight="360" styleClass="login-card">
            <children>
                <Label text="Login" layoutX="115" layoutY="20" styleClass="title"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                <Label text="Username" layoutX="30" layoutY="80" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <TextField fx:id="usernameField" layoutX="30" layoutY="100" prefWidth="240" styleClass="text-field"
                           promptText="Enter your username"/>

                <Label text="Password" layoutX="30" layoutY="150" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <PasswordField fx:id="passwordField" layoutX="30" layoutY="170" prefWidth="240" styleClass="text-field"
                               promptText="Enter your password"/>

                <Label text="Role" layoutX="30" layoutY="220" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="roleBox" layoutX="30" layoutY="240" prefWidth="240" styleClass="combo-box"/>

                <Button text="Login" layoutX="90" layoutY="300" prefWidth="120" styleClass="login-button"
                        onAction="#handleLogin"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>

                <Label fx:id="errorLabel" layoutX="30" layoutY="340" styleClass="error-label"
                       style="-fx-text-fill: red; -fx-font-weight: bold;"/>

            </children>
        </AnchorPane>
    </children>
</AnchorPane>
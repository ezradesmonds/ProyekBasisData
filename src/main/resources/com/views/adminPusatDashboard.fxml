<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.katering.controller.AdminPusatController"
            prefHeight="600.0" prefWidth="800.0">
    <top>
        <VBox spacing="10" alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </BorderPane.margin>
            <Label text="Dashboard Admin Pusat" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <HBox spacing="10">
                <Button text="Lihat Daftar Pengguna" onAction="#lihatDaftarPengguna" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button text="Lihat Daftar Cabang" onAction="#lihatDaftarCabang" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
<!--                <Button text="Tambah Promo" onAction="#tambahPromo" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>-->
                <Button text="Kelola Promo" onAction="#kelolaPromo" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
            </HBox>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" alignment="TOP_CENTER">
            <Label text="Performa Cabang" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <TableView fx:id="performTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="Cabang" fx:id="cabangCol" prefWidth="150"/>
                    <TableColumn text="Jumlah Pesanan" fx:id="jumlahCol" prefWidth="150"/>
                    <TableColumn text="Total Pendapatan" fx:id="pendapatanCol" prefWidth="200"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
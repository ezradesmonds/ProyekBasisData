<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="15.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.katering.controller.JadwalPengirimanController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Formulir Jadwal Pengiriman">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <ComboBox fx:id="pemesananComboBox" prefWidth="310.0" promptText="Pilih ID Pemesanan" />
        <ComboBox fx:id="stafComboBox" prefWidth="310.0" promptText="Pilih Staf Pengirim" />
        <DatePicker fx:id="tanggalPicker" prefWidth="310.0" promptText="Pilih Tanggal Pengiriman" />
        <TextField fx:id="waktuField" prefWidth="310.0" promptText="Masukkan Waktu (HH:MM:SS)" />
        <TextField fx:id="alamatField" prefWidth="310.0" promptText="Alamat Pengiriman" />
        <Button onAction="#handleSubmitButton" styleClass="login-button" text="Submit Jadwal" />
        <Label fx:id="messageLabel" textAlignment="CENTER" />
    </children>
</VBox>
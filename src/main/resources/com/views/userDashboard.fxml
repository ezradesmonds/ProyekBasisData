<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.katering.controller.UserDashboardController"
            prefHeight="600.0" prefWidth="800.0">
    <top>
        <VBox spacing="10" alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </BorderPane.margin>
            <Label text="Dashboard Pelanggan" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Cabang:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="cabangComboBox" prefWidth="150" style="-fx-background-radius: 5;"/>
                <Label text="Kategori:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="kategoriComboBox" prefWidth="150" style="-fx-background-radius: 5;"/>
            </HBox>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" alignment="TOP_CENTER">
            <Label text="Daftar Menu Tersedia" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <TableView fx:id="menuTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="Nama" fx:id="namaCol" prefWidth="180"/>
                    <TableColumn text="Kategori" fx:id="kategoriCol" prefWidth="100"/>
                    <TableColumn text="Harga" fx:id="hargaCol" prefWidth="80"/>
                    <TableColumn text="Stok" fx:id="stokCol" prefWidth="60"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <BorderPane.margin>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </BorderPane.margin>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Tambah ke Keranjang" onAction="#tambahKeKeranjang" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button text="Lihat Keranjang" onAction="#lihatKeranjang" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button text="Histori Pesanan" onAction="#lihatRiwayatPemesanan" style="-fx-background-color: #FFC107; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Daftar Akun Baru" onAction="#daftarAkun" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button text="Pantau Status Pesanan" onAction="#pantauStatus" style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button text="Beri Rating" onAction="#beriRating" style="-fx-background-color: #795548; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
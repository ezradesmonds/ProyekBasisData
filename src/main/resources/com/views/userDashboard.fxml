<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.katering.controller.UserDashboardController">
    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Cabang:"/>
            <ComboBox fx:id="cabangComboBox"/>
            <Label text="Kategori:"/>
            <ComboBox fx:id="kategoriComboBox"/>
            <Button text="Filter Menu" onAction="#filterMenu"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="menuTable">
            <columns>
                <TableColumn text="Nama" fx:id="namaCol"/>
                <TableColumn text="Kategori" fx:id="kategoriCol"/>
                <TableColumn text="Harga" fx:id="hargaCol"/>
                <TableColumn text="Stok" fx:id="stokCol"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <padding><Insets top="10" right="10" bottom="0" left="10"/></padding>
                <Button text="Tambah ke Keranjang" onAction="#tambahKeKeranjang"/>
                <Button text="Lihat Keranjang" onAction="#lihatKeranjang"/>
                <Button text="Histori Pesanan" onAction="#lihatHistori"/>
                <Button text="Logout" onAction="#handleLogout"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <padding><Insets top="0" right="10" bottom="10" left="10"/></padding>
                <Button text="Daftar Akun Baru" onAction="#daftarAkun"/>
                <Button text="Pantau Status Pesanan" onAction="#pantauStatus"/>
                <Button text="Beri Rating" onAction="#beriRating"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>

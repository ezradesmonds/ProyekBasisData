<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.katering.controller.AdminCabangController"
            prefHeight="600.0" prefWidth="800.0">
    <top>
        <VBox spacing="10" alignment="CENTER_LEFT" BorderPane.margin="10.0">
            <Label text="Dashboard Admin Cabang" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <HBox spacing="10">
                <Button text="Tambah Menu" onAction="#tambahMenu" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button text="Edit Menu" onAction="#editMenu" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Button text="Hapus Menu" onAction="#hapusMenu" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
            </HBox>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.5" prefHeight="200.0" prefWidth="160.0">
            <items>
                <VBox spacing="10" alignment="TOP_CENTER">
                    <Label text="Daftar Pesanan" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <TableView fx:id="pesananTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn text="ID Pesanan" fx:id="idCol" prefWidth="100"/>
                            <TableColumn text="Nama Pelanggan" fx:id="namaCol" prefWidth="150"/>
                            <TableColumn text="Status" fx:id="statusCol" prefWidth="150"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>
                <VBox spacing="10" alignment="TOP_CENTER">
                    <Label text="Daftar Menu Cabang" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <TableView fx:id="menuTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn text="ID" fx:id="menuIdCol" prefWidth="50"/>
                            <TableColumn text="Nama Menu" fx:id="menuNamaCol" prefWidth="150"/>
                            <TableColumn text="Deskripsi" fx:id="menuDeskripsiCol" prefWidth="200"/>
                            <TableColumn text="Harga" fx:id="menuHargaCol" prefWidth="80"/>
                            <TableColumn text="Kategori" fx:id="menuKategoriCol" prefWidth="100"/>
                            <TableColumn text="Stok" fx:id="menuStokCol" prefWidth="50"/>
                            <TableColumn text="Tersedia" fx:id="menuTersediaCol" prefWidth="70"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" BorderPane.margin="10.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Update Status Pesanan" onAction="#updateStatusPesanan" style="-fx-background-color: #FFC107; -fx-text-fill: black; -fx-font-weight: bold; -fx-background-radius: 5;"/>
            <Button text="Jadwalkan Pengiriman" onAction="#jadwalPengiriman" style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
            <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
        </HBox>
    </bottom>
</BorderPane>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.katering.controller.AdminCabangController">
    <top>
        <VBox spacing="10">
            <Label text="Dashboard Admin Cabang" styleClass="title"/>
            <HBox spacing="10">
                <Button text="Tambah Menu" onAction="#tambahMenu"/>
                <Button text="Edit Menu" onAction="#editMenu"/>
                <Button text="Hapus Menu" onAction="#hapusMenu"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="pesananTable">
            <columns>
                <TableColumn text="ID Pesanan" fx:id="idCol"/>
                <TableColumn text="Nama Pelanggan" fx:id="namaCol"/>
                <TableColumn text="Status" fx:id="statusCol"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Tandai Selesai" onAction="#prosesPesanan"/>
            <Button text="Jadwalkan Pengiriman" onAction="#jadwalPengiriman"/>
            <Button text="Logout" onAction="#handleLogout"/>
        </HBox>
    </bottom>
</BorderPane>
